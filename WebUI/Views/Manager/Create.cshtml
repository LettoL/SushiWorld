@using WebUI.Services.Abstract
@{
    ViewData["Title"] = "Create";
    Layout = account.GetLayout();
    @inject IAccountInformationService account
}

<div class="content">
    <div class="page-header">
        <h1>Создание менеджера</h1>
        <p>Здесь создается новый менеджер</p>
    </div>
    <section class="table">
        <div class="portlet">
            <div class="portlet-header">
                Данные учетной записи
            </div>
            <div class="portlet-body">
                <form action="/Manager/Create" method="post">
                    <div class="form-group-wrapper">
                        <div class="form-group row">
                            <div class="col-md-3">
                                <label>Имя пользователя</label>
                            </div>
                            <div class="col-md-9">
                                <input type="text" class="form-control" name="login" />
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-md-3">
                                <label>Пароль</label>
                            </div>
                            <div class="col-md-9">
                                <input type="text" class="form-control" name="password" />
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-md-3">
                                <label>Телефон</label>
                            </div>
                            <div class="col-md-9">
                                <input type="text" class="form-control" name="phone" />
                            </div>
                        </div>
                        <div class="form-footer">
                            <button type="submit" class="button button-default">Отправить</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </section>
</div>

